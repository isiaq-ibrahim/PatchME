<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfileActivity">

    <TextView
        android:id="@+id/aboutYouTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About you"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:fontFamily="@font/poppins"
        />

    <TextView
        android:id="@+id/accountSetUpTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let set up your account real quick"
        android:layout_marginStart="20dp"
        android:layout_below="@id/aboutYouTextView"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/firstNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_medium"
        android:layout_below="@id/accountSetUpTextView"
        android:layout_marginTop="50dp"
        />

    <EditText
        android:id="@+id/firstName"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:layout_below="@id/firstNameTextView"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/lastNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name"
        android:layout_marginStart="200dp"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_medium"
        android:layout_below="@id/accountSetUpTextView"
        android:layout_marginTop="50dp"
        />

    <EditText
        android:id="@+id/lastName"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        android:layout_below="@id/firstNameTextView"
        android:layout_marginStart="200dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_medium"
        android:layout_marginStart="20dp"
        android:layout_below="@id/firstName"
        android:layout_marginTop="30dp"
        />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your email address"
        android:layout_below="@id/emailTextView"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/cityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_medium"
        android:layout_below="@id/email"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        />

    <EditText
        android:id="@+id/city"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:hint="City"
        android:layout_below="@id/cityTextView"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/stateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="State"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_medium"
        android:layout_below="@id/email"
        android:layout_marginStart="200dp"
        android:layout_marginTop="30dp"
        />

    <EditText
        android:id="@+id/state"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:hint="State"
        android:layout_below="@id/cityTextView"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/pickUpAddressTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pickup Address"
        android:layout_marginStart="20dp"
        android:layout_below="@id/city"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_medium"
        />

    <EditText
        android:id="@+id/pickUpAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Somewhere in Sambisa Forest"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/pickUpAddressTextView"
        />

    <Button
        android:id="@+id/finishRegistration"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Done"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/pickUpAddress"
        android:layout_marginTop="20dp"
        android:backgroundTint="#2b2d50"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        style="@style/Widget.AppCompat.ProgressBar"
        android:visibility="gone"
        />

</RelativeLayout>